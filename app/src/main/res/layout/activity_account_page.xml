<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- AppBar -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:navigationIcon="@drawable/ic_menu">

                <!-- Centered Title -->
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/acc_page"
                    android:fontFamily="@font/black"
                    android:textColor="@android:color/black"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </com.google.android.material.appbar.MaterialToolbar>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Signed-in Email -->
            <TextView
                android:id="@+id/signed_in_as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/blackitalic"
                android:text="Signed in as: jonelobrian@gmail.com"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Sign Out Button -->
            <Button
                android:id="@+id/sign_out_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_out"
                android:backgroundTint="#5FBAFF"
                android:fontFamily="@font/bold"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Options Section -->
            <TextView
                android:id="@+id/send_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/send_feedback"
                android:padding="12dp"
                android:fontFamily="@font/medium"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/help_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_and_support"
                android:padding="12dp"
                android:fontFamily="@font/medium"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Follow Section -->
            <TextView
                android:id="@+id/follow_cbz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/follow"
                android:padding="12dp"
                android:fontFamily="@font/medium"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginBottom="0dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Edit Options -->
            <TextView
                android:id="@+id/edit_exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_exercise"
                android:padding="12dp"
                android:fontFamily="@font/medium"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/edit_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_categories"
                android:padding="12dp"
                android:fontFamily="@font/medium"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground" />


        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/nav_sets"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_sets"
            android:contentDescription="@string/nav_sets" />

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="@string/nav_home" />

        <ImageView
            android:id="@+id/nav_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_user"
            android:contentDescription="@string/nav_user" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
